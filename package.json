        "docx": "^9.5.1",
        "dotenv": "^17.2.3",
        "drizzle-orm": "^0.45.1",
        "drizzle-zod": "^0.8.3",
        "import-in-the-middle": "^2.0.0",
        "katex": "^0.16.25",
        "linkedom": "^0.18.12",
        "lowlight": "^3.3.0",
        "lucide-svelte": "^0.562.0",
        "pg": "^8.16.3",
        "sanitize-html": "^2.17.0",
        "svelte-tiptap": "^3.0.0",
